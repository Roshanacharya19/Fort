{
  "expo": {
    "name": "Fort",
    "slug": "Fort",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "fort",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fort.app",
      "infoPlist": {
        "NSFaceIDUsageDescription": "Allow Fort to use FaceID to authenticate you."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#0B0C15",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "package": "com.fort.app",
      "versionCode": 4,
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ]
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0D0D0D"
        }
      ],
      "expo-secure-store",
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "17.0"
          },
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "packagingOptions": {
              "pickFirst": [
                "lib/**/libc++_shared.so",
                "lib/**/libreact_nativemodule_core.so",
                "lib/**/libturbomodulejsijni.so"
              ]
            }
          }
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow Fort to use FaceID to authenticate you."
        }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    },
    "extra": {
      "eas": {
        "projectId": "ca6c4882-ccc4-4f44-9454-8645e7e93f92"
      }
    }
  }
}